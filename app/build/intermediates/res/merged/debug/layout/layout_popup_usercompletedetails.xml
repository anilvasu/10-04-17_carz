<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:background="@drawable/black_border_white"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/mainlayout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"

        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/driverAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Age"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/driverGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Gender"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/driverMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Mobile"
                android:textSize="15dp"
                android:visibility="gone"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/driverStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Status"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Message"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                />
            <TextView
                android:id="@+id/mutualfriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Mutual Friends:"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/ridesPosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Rides Provided: "
                android:textSize="15dp"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/ridesaccepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Rides Taken"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fbPicPlacing"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:src="@drawable/fbdefaultpic"
            app:border_color="#000000"
            app:border_width="1dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/bottomLayout"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="OK"
            android:textSize="20dp"
            android:id="@+id/ok"
            />



    </LinearLayout>
</LinearLayout>